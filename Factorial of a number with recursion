class Factorial
{
    int fact(int n)
    {
        int result;

       if(n==1)
         return 1;

       result = fact(n-1) * n;
       return result;
    }
}

public class Factorial
{
     public static void main(String args[])
     {
       Factorial obj = new Factorial();

       int a = obj.fact(4);
       System.out.println("The factorial of the number is : " + a);
     }
}
